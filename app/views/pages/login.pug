extends ../layouts/default

block content
  .main.container
    .row.justify-content-center
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In
        form(method='POST' action='/users/sessions')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Log in 
          a.float-right(href="/signup") New here? Signup


  .row.justify-content-center.text-center.stats-parent-container
    .col-md-3
      span.status-count #{tweetCount}
      h5 Tweets Created

    .col-md-3
      span.status-count #{userCount}
      h5 Unique Users

    .col-md-3
      span.status-count #{analyticsCount}
      h5 Total Visits

      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li = error.type
