doctype html
html(lang='en')
  include head
  if (req.isAuthenticated())
  body.login-screen
    include header
    .container
      if (message && message.length > 0)
        div.alert.alert-danger.alert-dismissible.fade.show(role="alert") #{message}
          button.close(type="button" data-dismiss="alert" aria-label="Close")
            span(aria-hidden="true") &times;
      block main
      block content
    include footer
